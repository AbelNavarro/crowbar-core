- if @role.elements.length > 0
  %table{:class => "top"}
    - @role.elements.sort.each do |key, value|
      %dl
        %dt
          = t '.role'
          %b
            - if CONVERGED_ADMIN
              = link_to key, "http://#{request.host}:4040/roles/#{key}", :target => '_blank'
            - else
              = key
        %dd= value.map{|m| m.split('.').first}.sort.map{|m| link_to m, nodes_path(:selected => m)}.join('<br/>')
  .clear
- else
  %p= t '.none'


.row
  .col-xs-12
    %h1.page-header
      = t(".title")

- form_for :node, :url => nodes_list_path, :html => { :role => "form" } do |f|
  - if params[:allocated]
    = hidden_field_tag "allocated", "yes"

  .panel.panel-default
    .panel-heading
      %h2
        - if params[:allocated]
          = t(".title_unallocated")

          .btn-group.pull-right
            = link_to t(".all"), nodes_list_path, :class => "btn btn-default"
            %input.btn.btn-default{ :type => "submit", :name => "submit", :value => t(".save") }
        - else
          = t(".title_all")

          .btn-group.pull-right
            = link_to t(".unallocated"), nodes_list_path(:allocated => "yes"), :class => "btn btn-default"
            %input.btn.btn-default{ :type => "submit", :name => "submit", :value => t(".save") }

    - if @nodes.count > 0
      %table.table.table-hover.table-middle
        %thead
          %tr
            %th
              = t(".name")
            %th
              = t(".alias")
            %th
              = t(".public_name")
            %th
              = t(".hw_description")
            %th
              = t(".description")
            %th
              = t(".group")
            - if crowbar_options[:show].include? :bios
              %th
                = t(".bios")
            - if crowbar_options[:show].include? :raid
              %th
                = t(".raid")
            %th
              = t(".target_platform")
            %th
              = t(".license_key")
            %th.nowrap
              %label
                %input{ :type => "checkbox", :value => "all", "data-checkall" => "input.allocate" }
                = t(".allocate_all")

        %tbody
          - @nodes.sort_by{ |handle, n| n.name }.each do |handle, node|
            %tr
              %td.alias
                = link_to node.name.split(".").first, node_path(node.handle), :title => node.ip

              - if node.admin?
                %td
                  = text_field_tag "node[#{node.name}][alias]", node.alias(true) || t(".admin"), :class => "form-control"
                %td
                  = text_field_tag "node[#{node.name}][public_name]", node.public_name(true), :class => "form-control"
                %td.nowrap
                  = "#{node.hardware}, #{format_memory(node.memory)}, #{node.nics} Nics"
                %td
                  = text_field_tag "node[#{node.name}][description]", node.description(true) || "", :class => "form-control"
                %td
                  = text_field_tag "node[#{node.name}][group]", node.group, :class => "form-control"
                - if crowbar_options[:show].include? :bios
                  %td
                    = t("na")
                - if crowbar_options[:show].include? :raid
                  %td
                    = t("na")
                %td
                  = node.pretty_target_platform
                %td
                  = t "na"
                %td
                  = t "na"

              - else
                %td
                  = text_field_tag "node[#{node.name}][alias]", node.alias(true), :class => "form-control"
                %td
                  = text_field_tag "node[#{node.name}][public_name]", node.public_name(true), :class => "form-control"
                %td.nowrap
                  = "#{node.hardware}, #{format_memory(node.memory)}, #{node.nics} Nics"
                %td
                  = text_field_tag "node[#{node.name}][description]", node.description(true) || "", :class => "form-control"
                %td
                  = text_field_tag "node[#{node.name}][group]", node.group(true), :class => "form-control"
                - if crowbar_options[:show].include? :bios
                  %td
                    = select_tag "node[#{node.name}][bios]", options_for_select(crowbar_options[:bios], node.bios_set), :class => "form-control"
                - if crowbar_options[:show].include? :raid
                  %td
                    = select_tag "node[#{node.name}][raid]", options_for_select(crowbar_options[:raid], node.raid_set), :class => "form-control"
                - if node.allocated
                  %td
                    = node.pretty_target_platform
                  - if crowbar_service.require_license_key? node.target_platform
                    %td
                      = node.license_key
                  - else
                    %td
                      = t("na")
                - else
                  %td
                    = select_tag "node[#{node.name}][target_platform]", platforms_for_select(node.target_platform), :class => "form-control", "data-showit" => crowbar_service.require_license_platforms.join(","), "data-showit-target" => "input[name=\"node[#{node.name}][license_key]\"]", "data-showit-direct" => "true"
                  %td
                    = text_field_tag "node[#{node.name}][license_key]", node.license_key, :class => "form-control"
                %td
                  - if node.allocated
                    = t "complete"
                  - else
                    %label
                      %input.allocate{ :type => "checkbox", :value => "1", :name => "node[#{node.name}][allocate]" }
    - else
      .panel-body
        .alert.alert-info
          = t('no_items')

    .panel-footer.text-right
      .btn-group
        = link_to t(".unallocated"), nodes_list_path(:allocated => "yes"), :class => "btn btn-default"
        %input.btn.btn-default{ :type => "submit", :name => "submit", :value => t(".save") }

<h1>UCS Login Settings</h1>
<% form_tag(:action => "login") do %>
	<label for="thisURL">URL</label><input id="thisURL" type="text" name="thisURL" value="<%= @asIsURL %>" />
	<label for="myName">Name</label><input id="myName" type="text" name="myName" value="<%= @asIsName %>" />
	<label for="myPassword">Password</label><input id="myPassword" type="password" name="myPassword" value="<%= @asIsPass %>" />
	<input type="submit" name="Submit" value="Login" />
<% end %>

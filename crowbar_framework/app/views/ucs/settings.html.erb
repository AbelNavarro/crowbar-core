<h1>UCS Login Settings</h1>

<% form_tag(logged_in? ? ucs_logout_path : ucs_login_path) do %>
    <label>
        API URL <br />
        <input type="text" name="ucs_url" value="<%= @ucs_url %>" <%= readonly %> />
    </label>

    <label>
        Username <br />
        <input type="text" name="username" value="<%= @username %>" <%= readonly %> />
    </label>

    <label>
        Password <br />
        <input type="password" name="password" value="<%= @password %>" <%= readonly %> />
    </label>

  <% if logged_in? %>
    <p>
        There is a UCS login session currently active. Please log out
        before changing any settings.
    </p>
    <input type="submit" name="logout" value="Logout" />
  <% else %>
    <input type="submit" name="login" value="Login" />
  <% end %>
<% end %>
